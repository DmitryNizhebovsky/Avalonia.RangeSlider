<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Avalonia.RangeSlider.SampleApp"
             xmlns:rangeSlider="clr-namespace:Avalonia.RangeSlider;assembly=Avalonia.RangeSlider"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             x:Class="Avalonia.RangeSlider.SampleApp.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

	<Application.Resources>
		<themes:BundledTheme BaseTheme="Light" PrimaryColor="Teal" SecondaryColor="Amber" />
	</Application.Resources>
	
    <Application.Styles>
        <FluentTheme Mode="Light" />
        <rangeSlider:RangeSliderStyle />
    </Application.Styles>

    <!-- Use for material -->

    <!--
	<Application.Styles>
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
